<div id="contents">
  <div id="sub">メニュー</br>
  <%= link_to "新規投稿", new_admin_spot_path %></br>
  <%= link_to "カテゴリー新規登録", new_admin_category_path %></br>
  <%= link_to "温泉投稿一覧", admin_spots_path %></br>
  </div>

<h1>投稿一覧</h1>

<% @spots.each do |spot| %>

  <p>タイトル</p>
  <span><%= spot.name %></span>

  <p>カテゴリー</p>
  <span><%= spot.category.try(:name) %></span>

  <p>温泉質</p>
  <span><%= spot.quality %></span>

  <p>本文</p>
  <span><%= spot.introduction %></span>


<% end %>
</div>