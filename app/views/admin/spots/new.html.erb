
<div id="contents">
  <div id="sub">メニュー</br>
  <%= link_to "新規投稿", new_admin_spot_path %></br>
  <%= link_to "カテゴリー新規登録", new_admin_category_path %></br>
  <%= link_to "温泉投稿一覧", admin_spots_path %></br>
</div>
<h1>新規投稿</h1>


<%= form_with model: @spot, url: admin_spots_path do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :name %>

  <h4>カテゴリー</h4>
  <td><%= f.collection_select :category_id, Category.all, :id, :name, {include_blank: '--選択してください--'}, class: 'sample' %></td></tr>

  <h4>温泉質</h4>
  <%= f.text_field :quality %>

  <h4>本文</h4>
  <%= f.text_area :introduction %>

  <%= f.submit '投稿' %>
<% end %>

</div>

