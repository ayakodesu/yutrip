
<%= form_with model: @spot, url: user_spots_path do |f| %>
<div class="container">
  <div class="row mt-3 justify-content-center">
      <div class="col-lg col-md-5 mb-5 text-center">
        <%= image_tag @spot.image, size: '350x300' %>
      </div>
        <div class="col-6">
          <table class="table table-borderless table-striped">
            <tr><th>商品名</th>
          <td><%= @spot.name %></td></tr>
          <tr><th>商品説明</th>
          <td><%= @spot.quality %></td>
          <tr><th>商品説明</th>
          <td><%= @spot.introduction %></td>
          <div>
  <p>コメント件数：<%= @spot.reviews.count %></p>
  <% @spot.reviews.each do |review| %>
    <p><%= image_tag review.user.get_profile_image(100,100) %></p>
    <%= review.user.name %>
    <%= review.created_at.strftime('%Y/%m/%d') %><%= review.comment %>
  <% end %>
</div>
<div>
  <%= form_with model: [@spot, @review] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>

<% end %>