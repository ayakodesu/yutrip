<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-wrapper">
  <h1>ログイン</h1>
  <form>
    <div class="form-item">
      <label for="email"></label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"e-mail" %>
    </div>
    <div class="form-item">
      <label for="password"></label>
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"password" %>
    </div>
    <div class="button-panel mb-3">
      <%= f.submit "Log in", class: "button" %>
    </div>
  </form>
  <div class="signup">
     まだ会員登録されていない方はこちら
      <%= render "user/shared/links" %>
  </div>
</div>
<% end %>
